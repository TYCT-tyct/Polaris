POLARIS_DATABASE_URL=postgresql://postgres:postgres@localhost:55432/polaris
POLARIS_LOG_LEVEL=INFO
POLARIS_DEFAULT_HANDLES=elonmusk

# per-source rate limits
POLARIS_XTRACKER_RATE=1
POLARIS_XTRACKER_BURST=2
POLARIS_GAMMA_RATE=2
POLARIS_GAMMA_BURST=4
POLARIS_CLOB_RATE=5
POLARIS_CLOB_BURST=8

# intervals (seconds)
POLARIS_MARKETS_DISCOVERY_INTERVAL=300
POLARIS_TRACKING_SYNC_INTERVAL=300
POLARIS_METRIC_SYNC_INTERVAL=120
POLARIS_POST_SYNC_INTERVAL=120
POLARIS_QUOTE_TOP_SYNC_INTERVAL=10
POLARIS_QUOTE_DEPTH_SYNC_INTERVAL=30
POLARIS_ORDERBOOK_L2_SYNC_INTERVAL=60
POLARIS_MAPPING_SYNC_INTERVAL=300
POLARIS_AGG_1M_INTERVAL=60
POLARIS_HEALTH_AGG_INTERVAL=60
POLARIS_RETENTION_INTERVAL=86400

# behavior
POLARIS_POST_FAIL_BACKOFF_THRESHOLD=8
POLARIS_POST_FAIL_BACKOFF_INTERVAL=300
POLARIS_RAW_RETENTION_DAYS=14
POLARIS_ENABLE_L2=true

